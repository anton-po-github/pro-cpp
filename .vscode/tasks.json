{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DEBUG-BUILD-MSVC",
            "type": "process",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-NoProfile",
                "-File", "${workspaceFolder}\\.vscode\\build.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}